<header>

    <h1 id="titre" class="carlito-bold">EduSchool</h1>

    <div id="contenuEntete">
        <nav>
            {% if is_granted('ROLE_PROFESSEUR') %}
                <a>Gestion des élèves</a>
                <a>Gestion des professeurs</a>
                <a>Gestion des notes</a>
            {% elseif is_granted('ROLE_ELEVE') %}
                <a>Consulter les notes</a>
                <a>Consulter ses professeurs</a>
            {% endif %}
        </nav>

        <div id="userInformation">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill"
                 viewBox="0 0 16 16">
                <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
            </svg>
            {% if app.user %}
                {% if is_granted('ROLE_PROFESSEUR') %}
                    PROFE
                {% else %}
                    ELEVE
                {% endif %}
            {% else %}
                <p class="carlito-regular">Se connecter</p>
            {% endif %}
        </div>
    </div>

</header>