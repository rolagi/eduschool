{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <form method="POST">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        {% endif %}

        <div class="center">
            <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
            <label for="username">Nom d'utilisateur</label>
            <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control"
                   autocomplete="username" required autofocus>
            <label for="password">Mot de passe</label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password"
                   required>

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

            <button class="btn btn-lg btn-primary" type="submit">
                Se connecter
            </button>

            <button class="btn btn-lg btn-primary" type="submit">
                <a href="{{ path("registration") }}">S'inscrire</a>
            </button>
        </div>
    </form>
{% endblock %}
